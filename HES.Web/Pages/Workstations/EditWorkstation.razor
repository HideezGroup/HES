@inherits HESModalBase

@if (!Initialized)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="workstation" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <EditForm Model="Workstation" OnValidSubmit="EditAsync">
            <h5 class="text-gray mb-4 ">@Workstation.Name</h5>
            <div class="form-group">
                <label class="text-gray">Company</label>
                <select class="form-select text-navyblue" @onchange="CompanyChangedAsync">
                    <option></option>
                    @foreach (var item in Companies)
                    {
                        if (Workstation.Department?.CompanyId == item.Id)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <FormLabel For="@(() => Workstation.DepartmentId)" class="text-gray" />
                <select class="form-select text-navyblue" @bind="Workstation.DepartmentId">
                    @foreach (var item in Departments)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <label class="control-label text-gray">Unlock settings</label>
            <ul class="list-group mb-4">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Has RFID
                    <div class="custom-control custom-switch">
                        <input id="hasRfid" type="checkbox" class="custom-control-input text-navyblue" @bind="Workstation.RFID">
                        <label class="custom-control-label" for="hasRfid"></label>
                    </div>
                </li>
            </ul>
            <div class="form-footer">
                <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
                <Button @ref="Button" Text="Save" type="submit" class="btn btn-primary" />
            </div>
        </EditForm>
    }
}