@if (Filter == null)
{
    <Loader />
}
else
{
    <EditForm Model="Filter" OnValidSubmit="FilteredAsync">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Name)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Name" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Domain)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Domain" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.ClientVersion)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.ClientVersion" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Company)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Company" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Department)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Department" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.OS)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.OS" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.IP)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.IP" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.LastSeenStartDate)" class="form-label text-gray" />
                <DateTimePicker @bind-Value="Filter.LastSeenStartDate" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.LastSeenEndDate)" class="form-label text-gray" />
                <DateTimePicker @bind-Value="Filter.LastSeenEndDate" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.RFID)" class="form-label text-gray" />
                <select @onchange="OnChangeRfid" class="form-select">
                    <option selected></option>
                    <option value="Yes">@Resource.Label_Yes</option>
                    <option value="No">@Resource.Label_No</option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Approved)" class="form-label text-gray" />
                <select @onchange="OnChangeApproved" class="form-select">
                    <option selected></option>
                    <option value="Yes">@Resource.Label_Yes</option>
                    <option value="No">@Resource.Label_No</option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Online)" class="form-label text-gray" />
                <select @onchange="OnChangeOnline" class="form-select">
                    <option selected></option>
                    <option value="Yes">@Resource.Label_Yes</option>
                    <option value="No">@Resource.Label_No</option>
                </select>
            </div>
            <div class="col align-self-end text-end form-group">
                <Button Text="@Resource.Btn_Clear" OnClick="ClearAsync" class="btn btn-secondary" />
                <Button @ref="Button" Text="@Resource.Btn_Filter" type="submit" class="btn btn-primary" />
            </div>
        </div>
    </EditForm>
}