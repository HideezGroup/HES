@inherits HESModalBase

@if (!Initialized)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="@Template.Name" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">@string.Format(Resource.Templates_DeleteTemplate_Body, Template.Name)</h5>
        <div class="form-footer">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">@Resource.Btn_Cancel</button>
            <Button OnClick="DeleteTemplateAsync" Text="@Resource.Btn_Delete" class="btn btn-danger" />
        </div>
    }
}