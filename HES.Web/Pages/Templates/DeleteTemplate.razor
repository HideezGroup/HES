@inherits HESModalBase

@if (!Initialized)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="template" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">You want to delete template @Template.Name?</h5>
        <div class="form-footer">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
            <Button OnClick="DeleteTemplateAsync" Text="Delete" class="btn btn-danger" />
        </div>
    }
}