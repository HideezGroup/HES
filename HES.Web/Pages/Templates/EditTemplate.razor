@inherits HESModalBase

@if (!Initialized)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="@Template.Name" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <EditForm Model="Template" OnValidSubmit="EditTemplateAsync">
            <DataAnnotationsValidator />
            <ValidationErrorMessage @ref="ValidationErrorMessage" />
            <div class="form-group">
                <Label For="@(() => Template.Name)" class="text-gray" />
                <InputText @bind-Value="Template.Name" class="form-control text-navyblue" />
                <ValidationMessage For="@(() => Template.Name)" class="text-danger" />
            </div>
            <div class="form-group">
                <Label For="@(() => Template.Urls)" class="text-gray" />
                <InputText @bind-Value="Template.Urls" class="form-control text-navyblue" />
                <ValidationMessage For="@(() => Template.Urls)" class="text-danger" />
            </div>
            <div class="form-group">
                <Label For="@(() => Template.Apps)" class="text-gray" />
                <InputText @bind-Value="Template.Apps" class="form-control text-navyblue" />
                <ValidationMessage For="@(() => Template.Apps)" class="text-danger" />
            </div>
            <div class="form-footer">
                <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">@Resource.Btn_Cancel</button>
                <Button @ref="Button" Text="@Resource.Btn_Save" type="submit" class="btn btn-primary" />
            </div>
        </EditForm>
    }
}