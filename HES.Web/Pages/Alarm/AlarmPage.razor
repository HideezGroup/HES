@page "/alarm"
@layout MainLayout
@attribute [Authorize(Roles = ApplicationRoles.Admin)]
@inherits HESPageBase

@if (AlarmState == null)
{
    <Loader />
}
else
{
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-10 col-xl-8">
                                <img style="width:120px;" src="/svg/logo-lock.svg" />
                                <h2>@Resources.Alarm_PageHeader</h2>
                                <p class="text-muted">
                                    @Resources.Alarm_PageDescription
                                </p>
                                @if (AlarmState.IsAlarm)
                                {
                                    <button type="button" @onclick="DisableAlarmAsync" class="btn btn-success" title="@Resources.Title_UnlockAll">
                                        <img src="/svg/icon-lock-open.svg" />
                                        @Resources.Btn_TurnOff
                                    </button>
                                }
                                else
                                {
                                    <button type="button" @onclick="EnableAlarmAsync" class="btn btn-danger" title="@Resources.Title_LockAll">
                                        <img src="/svg/icon-lock.svg" />
                                        @Resources.Btn_TurnOn
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="text-uppercase text-muted mb-2">
                                    @Resources.Label_WorkstationsOnline
                                </h6>
                                <span class="h2 mb-0">
                                    @WorkstationOnline
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="text-uppercase text-muted mb-2">
                                    @Resources.Label_WorkstationsCount
                                </h6>
                                <span class="h2 mb-0">
                                    @WorkstationCount
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="text-uppercase text-muted mb-2">
                                    @Resources.Label_Status
                                </h6>
                                <span class="h5 mb-0">
                                    @if (AlarmState.IsAlarm)
                                    {
                                        <span>@Resources.Label_EnabledBy @AlarmState.AdminName @AlarmState.Date.ToLocalTime()</span>
                                    }
                                    else
                                    {
                                        @if (AlarmState.Date == new DateTime())
                                        {
                                            <span>@Resources.Label_NeverUsed</span>
                                        }
                                        else
                                        {
                                            <span>@Resources.Label_DisabledBy @AlarmState.AdminName @AlarmState.Date.ToLocalTime()</span>
                                        }
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}