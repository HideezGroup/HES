<div class="dashboard-card">
    <div class="dashboard-card__title">
        @DashboardCard.CardTitle
    </div>
    @if (DashboardCard.Notifications.Count() > 0)
    {
        <div class="dashboard-card-notify-header">
            <div class="dashboard-card-notify-logo">
                <img class="dashboard-card-notify dashboard-card-logo__img" src="@DashboardCard.CardLogo" />
            </div>
            <div class="dashboard-card-list-wrapper">
                <div class="list-group list-group-horizontal-lines dashboard-card-list">
                    @foreach (var item in DashboardCard.Notifications)
                    {
                        @if (item.Action == null)
                        {
                            <a href="@item.Page" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span class="text-navyblue">@item.Message</span>
                                <span class="badge bg-danger rounded-pill">@item.Count</span>
                            </a>
                        }
                        else
                        {
                            <a @onclick="item.Action" href="" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span class="text-navyblue">@item.Message</span>
                                <span class="badge bg-danger rounded-pill">@item.Count</span>
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="dashboard-card-body">
            <div class="dashboard-card-wrapper border-end">
                <div class="dashboard-card-info__text fw-bold">@DashboardCard.LeftValue</div>
                @if (DashboardCard.LeftAction == null)
                {
                    <div class="dashboard-card-info__title"><a class="btn btn-outline-secondary" style="min-width:100px" href="@DashboardCard.LeftLink">@DashboardCard.LeftText</a></div>
                }
                else
                {
                    <div class="dashboard-card-info__title"><button class="btn btn-outline-secondary" style="min-width:100px" @onclick="DashboardCard.LeftAction">@DashboardCard.LeftText</button></div>
                }
            </div>
            <div class="dashboard-card-wrapper">
                <div class="dashboard-card-info__text">@DashboardCard.RightValue</div>
                @if (DashboardCard.RightAction == null)
                {
                    <div class="dashboard-card-info__title"><a class="btn btn-outline-secondary" style="min-width:100px" href="@DashboardCard.RightLink">@DashboardCard.RightText</a></div>
                }
                else
                {
                    <div class="dashboard-card-info__title"><button class="btn btn-outline-secondary" style="min-width:100px" @onclick="DashboardCard.RightAction">@DashboardCard.RightText</button></div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="dashboard-card-logo">
            <img class="dashboard-card-logo__img" src="@DashboardCard.CardLogo" />
        </div>
        <div class="dashboard-card-body">
            <div class="dashboard-card-wrapper border-end">
                <div class="dashboard-card-info__text fw-bold">@DashboardCard.LeftValue</div>
                @if (DashboardCard.LeftAction == null)
                {
                    <div class="dashboard-card-info__title"><a class="btn btn-outline-secondary" style="min-width:100px" href="@DashboardCard.LeftLink">@DashboardCard.LeftText</a></div>
                }
                else
                {
                    <div class="dashboard-card-info__title"><button class="btn btn-outline-secondary" style="min-width:100px" @onclick="DashboardCard.LeftAction">@DashboardCard.LeftText</button></div>
                }
            </div>
            <div class="dashboard-card-wrapper">
                <div class="dashboard-card-info__text">@DashboardCard.RightValue</div>
                @if (DashboardCard.RightAction == null)
                {
                    <div class="dashboard-card-info__title"><a class="btn btn-outline-secondary" style="min-width:100px" href="@DashboardCard.RightLink">@DashboardCard.RightText</a></div>
                }
                else
                {
                    <div class="dashboard-card-info__title"><button class="btn btn-outline-secondary" style="min-width:100px" @onclick="DashboardCard.RightAction">@DashboardCard.RightText</button></div>
                }
            </div>
        </div>
    }
</div>