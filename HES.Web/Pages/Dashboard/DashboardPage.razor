@page "/"
@layout MainLayout
@attribute [Authorize(Roles = ApplicationRoles.Admin)]
@inherits HESPageBase

@if (Initialized)
{
    <div class="row">
        <!-- HES -->
        <div class="card-col">
            <Card DashboardCard="ServerdCard" />
        </div>
        <!-- Employees -->
        <div class="card-col">
            <Card DashboardCard="EmployeesCard" />
        </div>
        <!-- Hardware Vaults -->
        <div class="card-col">
            <Card DashboardCard="HardwareVaultsCard" />
        </div>
        <!-- Workstations -->
        <div class="card-col">
            <Card DashboardCard="WorkstationsCard" />
        </div>
    </div>
}
else if (LoadFailed)
{
    <LoadingFailed ErrorMessage="@ErrorMessage" />
}
else
{
    <Loader />
}