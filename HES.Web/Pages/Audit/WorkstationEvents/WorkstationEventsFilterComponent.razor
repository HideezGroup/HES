@if (Filter == null)
{
    <Loader />
}
else
{
    <EditForm Model="Filter" OnValidSubmit="FilteredAsync">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.StartDate)" class="form-label text-gray" />
                <DateTimePicker @bind-Value="Filter.StartDate" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.EndDate)" class="form-label text-gray" />
                <DateTimePicker @bind-Value="Filter.EndDate" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Event)" class="form-label text-gray" />
                <select @bind="Filter.Event" class="form-select">
                    <option selected></option>
                    @foreach (var item in EventTypes)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Severity)" class="form-label text-gray" />
                <select @bind="Filter.Severity" class="form-select">
                    <option selected></option>
                    @foreach (var item in EventSeverities)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Note)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Note" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Workstation)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Workstation" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.UserSession)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.UserSession" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.HardwareVault)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.HardwareVault" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Employee)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Employee" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Company)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Company" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Department)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Department" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.Account)" class="form-label text-gray" />
                <InputText @bind-Value="Filter.Account" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <Label For="@(() => Filter.AccountType)" class="form-label text-gray" />
                <select @bind="Filter.AccountType" class="form-select">
                    <option selected></option>
                    @foreach (var item in AccountTypes)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <div class="col align-self-end text-end form-group">
                <Button Text="@Resource.Btn_Clear" OnClick="ClearAsync" class="btn btn-secondary" />
                <Button @ref="Button" Text="@Resource.Btn_Filter" type="submit" class="btn btn-primary" />
            </div>
        </div>
    </EditForm>
}