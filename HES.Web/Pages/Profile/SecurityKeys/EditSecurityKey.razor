@inherits HESModalBase

@if (Initialized)
{
    <div class="form-group">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" @bind-value="SecurityKeyName" @bind-value:event="oninput" />
    </div>
    <div class="form-footer">
        <button type="button" @onclick="ModalDialogCancel" class="btn btn-secondary">Cancel</button>
        <button type="button" @onclick="UpdateSecurityKeyAsync" class="btn btn-danger">Save</button>
    </div>
}
else
{
    <Loader />
}