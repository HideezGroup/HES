@page "/Profile"
@attribute [Authorize(Roles = ApplicationRoles.Admin)]
@inherits HESComponentBase

<div class="row h-100">
    <div class="mx-auto col-12 col-lg-10 col-xl-8">
        <div class="d-flex flex-column h-100">
            <ul class="custom-horizontal-pills nav nav-pills mb-3 nav-fill flex-column flex-md-row" role="tablist">
                <li class="nav-item">
                    <button class="nav-link w-100 @(SetActive(ProfileTabs.General))" @onclick="SetGeneralTab">General</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link w-100 @(SetActive(ProfileTabs.Security))" @onclick="SetSecurityTab">Security</button>
                </li>      
            </ul>
            <div class="h-100">
                @Tab
            </div>
        </div>
    </div>
</div>