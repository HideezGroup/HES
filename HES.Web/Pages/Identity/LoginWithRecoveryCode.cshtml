@page "/login-with-recovery-code"
@model HES.Web.Pages.Identity.LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="row h-100 justify-content-center align-items-center">
    <div class="custom-card">
        <h1 class="text-navyblue">@ViewData["Title"]</h1>
        @if (Model.ErrorMessage == null)
        {

            <p class="text-gray">
                You have requested to log in with a recovery code. This login will not be remembered until you provide
                an authenticator app code at log in or disable 2FA and log in again.
            </p>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-navyblue" asp-for="Input.RecoveryCode"></label>
                    <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        }
        else
        {
            <p class="text-danger">@Model.ErrorMessage</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}