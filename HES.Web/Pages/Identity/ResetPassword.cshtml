@page "/reset-password"
@model HES.Web.Pages.Identity.ResetPasswordModel
@{
    ViewData["Title"] = Resource.Identity_ResetPassword_Title;
}

<div class="row h-100 justify-content-center align-items-center">
    <div class="custom-card">
        <h1 class="text-navyblue">@ViewData["Title"]</h1>
        @if (Model.ErrorMessage == null)
        {
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label class="text-gray" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" readonly />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-gray" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-gray" asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">@Resource.Btn_Reset</button>
                </div>
            </form>
        }
        else
        {
            <p class="text-danger">@Model.ErrorMessage</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}