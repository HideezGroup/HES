@page "/update"
@layout BlankLayout
@attribute [Authorize(Roles = ApplicationRoles.Admin)]
@inherits HESPageBase

<ToastsWrapper />
<div class="mt-5 mx-2">
    <div class="card mx-auto" style="width: 20rem;">
        <div class="card-body shadow">
            <h3 class="text-dark text-center mb-3">Server update</h3>
            <label class="form-label"><span class="fw-bold">Platform OS:</span> @CurrentPlatform</label>
            <br />
            <label class="form-label"><span class="fw-bold">Script:</span> @CurrentScript</label>
            <div class="card-footer bg-transparent form-footer justify-content-center py-3">
                <Button class="btn btn-outline-primary" type="button" Text="Execute" OnClick="RunCommand" />
            </div>
        </div>
    </div>
</div>