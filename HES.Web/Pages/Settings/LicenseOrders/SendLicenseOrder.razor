@inherits HESModalBase

@if (LicenseOrder == null)
{
    <LoadingText />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="order" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 ">Confirm sending order.</h5>
        <div class="text-end">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
            <Button Text="Send" class="btn btn-primary" OnClick="SendOrderAsync" />
        </div>
    }
}