@inherits HESModalBase

@if (LicenseOrder == null)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="@Resource.LicenseOrders_EntityName" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 ">@Resource.LicenseOrders_SendLicenseOrder_Body</h5>
        <div class="text-end">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">@Resource.Btn_Cancel</button>
            <Button Text="@Resource.Btn_Send" OnClick="SendOrderAsync" class="btn btn-primary" />
        </div>
    }
}