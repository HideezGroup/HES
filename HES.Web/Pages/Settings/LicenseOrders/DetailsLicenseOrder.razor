@inherits HESModalBase

<div class="row">
    <div class="col-6">
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex align-items-center">
                <span class="fw-bold">@Resource.Label_ContactEmail</span>
                <span class="mx-1">-</span>
                <span>@LicenseOrder.ContactEmail</span>
            </li>
            <li class="list-group-item d-flex align-items-center">
                <span class="fw-bold">@Resource.Label_Note</span>
                <span class="mx-1">-</span>
                <span class="text-truncate">@LicenseOrder.Note</span>
            </li>
            <li class="list-group-item d-flex align-items-center">
                <span class="fw-bold">@Resource.Label_Prolong</span>
                <span class="mx-1">-</span>
                <span>
                    @if (LicenseOrder.ProlongExistingLicenses)
                    {
                        <span>@Resource.Label_Yes</span>
                    }
                    else
                    {
                        <span>@Resource.Label_No</span>
                    }
                </span>
            </li>
            @if (!LicenseOrder.ProlongExistingLicenses)
            {
                <li class="list-group-item d-flex align-items-center">
                    <span class="fw-bold">@Resource.Label_StartDate</span>
                    <span class="mx-1">-</span>
                    <span>@LicenseOrder.StartDate.Value.ToShortDateString()</span>
                </li>
            }
            <li class="list-group-item d-flex align-items-center">
                <span class="fw-bold">@Resource.Label_EndDate</span>
                <span class="mx-1">-</span>
                <span>@LicenseOrder.EndDate.ToShortDateString()</span>
            </li>
            <li class="list-group-item d-flex align-items-center">
                <span class="fw-bold">@Resource.Label_Created</span>
                <span class="mx-1">-</span>
                <span>@LicenseOrder.CreatedAt.ToLocalTime()</span>
            </li>
            <li class="list-group-item d-flex align-items-center">
                <span class="fw-bold">@Resource.Label_OrderStatus</span>
                <span class="mx-1">-</span>
                <span>@LicenseOrder.OrderStatus</span>
            </li>
        </ul>
    </div>
    <div class="col-6">
        <div style="max-height:344px;overflow:auto" class="border">
            <table class="table table-hover w-100 disable-selection mb-0">
                <thead>
                    <tr>
                        <th>
                            @Resource.Label_SerialNumber
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var licenseOrder in LicenseOrder.HardwareVaultLicenses)
                    {
                        <tr>
                            <td>
                                @licenseOrder.HardwareVaultId
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="form-footer">
    <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">@Resource.Btn_Close</button>
</div>