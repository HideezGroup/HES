@inherits HESModalBase

@if (CurrentPassword == null)
{
    <Loader />
}
else
{
    <EditForm Model="CurrentPassword" OnValidSubmit="DisableDataProtectionAsync">
        <DataAnnotationsValidator />
        <div class="form-group">
            <FormLabel For="@(() => CurrentPassword.Password)" class="text-gray" />
            <InputText @bind-Value="CurrentPassword.Password" type="password" class="form-control text-navyblue" />
            <ValidationMessage For="@(() => CurrentPassword.Password)" class="text-danger" />
        </div>
        <div class="form-footer">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
            <Button @ref="Button" type="submit" Text="Disable" class="btn btn-danger" />
        </div>
    </EditForm>
}