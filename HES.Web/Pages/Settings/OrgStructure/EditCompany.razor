@inherits HESModalBase

@if (!Initialized)
{
    <LoadingText />
}
else
{
    @if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="company" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <EditForm Model="Company" OnValidSubmit="EditAsync">
            <DataAnnotationsValidator />
            <ValidationErrorMessage @ref="ValidationErrorMessage" />
            <div class="form-group">
                <FormLabel For="@(() => Company.Name)" class="text-gray" />
                <InputText @bind-Value="Company.Name" class="form-control text-navyblue" />
                <ValidationMessage For="@(() => Company.Name)" class="text-danger" />
            </div>
            <div class="form-footer">
                <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
                <Button @ref="Button" type="submit" Text="Save" class="btn btn-primary" />
            </div>
        </EditForm>
    }
}