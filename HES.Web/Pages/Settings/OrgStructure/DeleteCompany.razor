@inherits HESModalBase

@if (!Initialized)
{
    <Loader />
}
else
{
    @if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="company" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">You want to delete company @Company.Name?</h5>
        <div class="form-footer">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
            <Button Text="Delete" class="btn btn-danger" OnClick="DeleteAsync" />
        </div>
    }
}