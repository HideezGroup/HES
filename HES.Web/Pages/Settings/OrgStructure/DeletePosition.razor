@inherits HESModalBase

@if (!Initialized)
{
    <LoadingText />
}
else
{
    @if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="position" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">You want to delete position @Position.Name?</h5>
        <div class="foorm-footer">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
            <Button Text="Delete" class="btn btn-danger" OnClick="DeleteAsync" />
        </div>
    }
}