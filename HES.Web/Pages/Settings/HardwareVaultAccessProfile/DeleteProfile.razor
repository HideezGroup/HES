@inherits HESModalBase

@if (AccessProfile == null)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="@AccessProfile.Name" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">@string.Format(Resource.HardwareVaultAccessProfile_DeleteProfile_Body, AccessProfile.Name)</h5>
        <div class="form-footer">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">@Resource.Btn_Cancel</button>
            <Button Text="@Resource.Btn_Delete" OnClick="DeleteProfileAsync" class="btn btn-danger" />
        </div>
    }
}