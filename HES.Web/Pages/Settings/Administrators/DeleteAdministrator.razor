@inherits HESModalBase

@if (ApplicationUser == null)
{
    <Loader />
}
else
{
    <h5 class="text-gray mb-3 text-break">@string.Format(Resource.Administrators_DeleteAdministrator_Body, ApplicationUser.Email)</h5>
    <div class="form-footer">
        <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">@Resource.Btn_Cancel</button>
        <Button Class="btn btn-danger" Text="@Resource.Btn_Delete" OnClick="@(async () => await DeleteUserAsync())" />
    </div>
}