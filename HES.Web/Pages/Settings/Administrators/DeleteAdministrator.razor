@inherits HESModalBase

@if (ApplicationUser == null)
{
    <Loader />
}
else
{
    <h5 class="text-gray mb-3 text-break">You want to delete administrator @ApplicationUser.Email?</h5>
    <div class="form-footer">
        <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
        <Button Class="btn btn-danger" Text="Delete" OnClick="@(async () => await DeleteUserAsync())" />
    </div>
}