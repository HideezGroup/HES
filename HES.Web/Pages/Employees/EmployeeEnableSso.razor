@inherits HESModalBase

@if (Employee == null)
{
    <Loader />
}
else
{
    <h5 class="text-gray mb-4 text-break">Are you sure you want to enable SSO for @Employee.FullName?</h5>
    <div class="form-footer">
        <button type="button" class="btn btn-secondary" @onclick="ModalDialogCancel">Cancel</button>
        <Button Text="Enable" class="btn btn-primary" OnClick="EnableEmployeeSsoAsync" />
    </div>
}