@inherits HESModalBase

@if (!Initialized)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="@Account.Name" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 ">@Resource.EmployeeDetails_SetAsWorkstationAccount_Body</h5>
        <div class="form-footer">
            <button type="button" class="btn btn-secondary me-1" @onclick="ModalDialogCancel">@Resource.Btn_Cancel</button>
            <Button Text="@Resource.Btn_Confirm" type="submit" class="btn btn-primary btn-min-w" OnClick="SetAsWorkstationAccountAsync" />
        </div>
    }
}