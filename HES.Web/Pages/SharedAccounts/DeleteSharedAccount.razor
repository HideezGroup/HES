@inherits HESModalBase

@if (!Initialized)
{
    <Loader />
}
else
{
    if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="shared account" CloseAction="ModalDialogCancel" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">You want to delete account <b>@Account.Name</b>?</h5>
        <div class="form-footer">
            <button type="button" class="btn btn-secondary me-1" @onclick="ModalDialogCancel">Cancel</button>
            <Button Text="Delete" Class="btn btn-danger" OnClick="DeleteAccoountAsync" />
        </div>
    }
}